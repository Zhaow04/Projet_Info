<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.controller.HUDController">
<StackPane prefHeight="32.0" prefWidth="136.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <HBox alignment="CENTER_RIGHT" prefWidth="139.0" spacing="5.0">
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" prefWidth="27.0" style="-fx-background-radius: 100; -fx-focus-traversable: false;" text="P" />
                  <Button fx:id="inventoryButton" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#openInventory" prefWidth="27.0" style="-fx-background-radius: 100; -fx-focus-traversable: false;" text="I" />
                  <Button alignment="CENTER" mnemonicParsing="false" prefWidth="27.0" style="-fx-background-radius: 100; -fx-focus-traversable: false;" text="C" />
                  <Button fx:id="saveButton" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#save" prefWidth="27.0" style="-fx-background-radius: 100; -fx-focus-traversable: false;" text="S" />
               </children>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
               <padding>
                  <Insets bottom="5.0" right="5.0" />
               </padding>
            </HBox>
         </children>
      </StackPane>
</StackPane>
